@model UserListModel
@{
    ViewData["Title"] = "Igors Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>

    <br />

    @(Html.ActionLink("Add", "Update", "User", null, new { @class = "btn btn-secondary" }))

    <br />

    <p>
        <table>
            <tr>
                <th>UserId</th>
                <th>E-Mail</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Age</th>
                <th>Country</th>
                <th>City</th>
                <th>Street</th>
                <th>HouseNumber</th>
                <th>Postal Code</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>

            @{
                foreach (var user in Model.UserModelList)
                {
                    <tr>
                        <td> @(user.UserId)</td>
                        <td> @(user.EMail)</td>
                        <td> @(user.GivenName)</td>
                        <td> @(user.Surname)</td>
                        <td> @(user.Age)</td>
                        <td> @(user.Country)</td>
                        <td> @(user.City)</td>
                        <td> @(user.Street)</td>
                        <td> @(user.HouseNumber)</td>
                        <td> @(user.PostalCode)</td>
                        <td> @(Html.ActionLink("Details", "Details", "User", new { id = user.UserId }, new { @class = "btn btn-secondary" }))</td>
                        <td> @(Html.ActionLink("Edit", "Update", "User", new { id = user.UserId }, new { @class = "btn btn-secondary" }))</td>
                        <td> @(Html.ActionLink("Delete", "Delete", "User", new { id = user.UserId }, new { @class = "btn btn-secondary" }))</td>
                    </tr>
                }


            }

        </table>

    </p>

</div>


