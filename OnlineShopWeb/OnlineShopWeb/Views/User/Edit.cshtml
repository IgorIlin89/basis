@model OnlineShopWeb.Models.UserModel
@{
    ViewData["Title"] = "Igors Home Page";
}

<p> @(Model.UserId)</p>
<p> @(Model.FirstName)</p>
<p> @(Model.LastName)</p>
<p> @(Model.Age)</p>
<p> @(Model.Location?.Country)</p>
<p> @(Model.Location?.City)</p>
<p> @(Model.Location?.Street)</p>
<p> @(Model.Location?.PostalCode)</p>
<p> @(Html.ActionLink("Back", "Index", "UserList"))</p>

<p></p>
<p></p>

<form asp-action="Edit" asp-controller="User" method="post">

    <input type="hidden" asp-for="UserId" />

    <label for="FirstName">First name:</label>
    <input type="text" asp-for="FirstName" />
    <span asp-validation-for="FirstName" class="text-danger"></span>

    <p></p>

    <label for="LastName">Last name:</label>
    <input type="text" asp-for="LastName" />
    <span asp-validation-for="LastName" class="text-danger"></span>

    <p></p>

    <label for="Age">Age:</label>
    <input type="text" asp-for="Age" />
    <span asp-validation-for="Age" class="text-danger"></span>

    <p></p>

    <label for="Location.Country">Country:</label>
    <input type="text" asp-for="Location.Country" />
    <span asp-validation-for="Location.Country" class="text-danger"></span>

    <p></p>

    <p></p>

    <input type="submit" value="Update" />

</form>
