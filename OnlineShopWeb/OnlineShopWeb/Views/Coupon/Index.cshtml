@model CouponListModel
@{
    ViewData["Title"] = "Igors Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>

    <br />

    @(Html.ActionLink("Add", "Update", "Coupon", null, new { @class = "btn btn-secondary" }))

    <br />

    <table>
        <tr>
            <th>CouponId</th>
            <th>Code</th>
            <th>Amount of Discount</th>
            <th>Type of Discount</th>
            <th>Maximal Number of Uses</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>

        @{
            foreach (var product in Model.CouponList)
            {
                <tr>
                    <td> @(product.Id)</td>
                    <td> @(product.Code)</td>
                    <td> @(product.AmountOfDiscount)</td>
                    <td> @(product.TypeOfDiscount)</td>
                    <td> @(product.MaxNumberOfUses)</td>
                    <td> @(Html.ActionLink("Details", "Details", "Coupon", new { id = product.Id }, new { @class = "btn btn-secondary" }))</td>
                    <td> @(Html.ActionLink("Edit", "Update", "Coupon", new { id = product.Id }, new { @class = "btn btn-secondary" }))</td>
                    <td> @(Html.ActionLink("Delete", "Delete", "Coupon", new { id = product.Id }, new { @class = "btn btn-secondary" }))</td>
                </tr>
            }


        }

    </table>



