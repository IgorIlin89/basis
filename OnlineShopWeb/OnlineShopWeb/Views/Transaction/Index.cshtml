@using OnlineShopWeb.TransferObjects.Models.ListModels;
@model List<TransactionModel>
@{
    ViewData["Title"] = "Igors Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>

    <br />

    <table>
        <tr>
            <th>Final Price</th>
            <th>Product Name</th>
            <th>Coupon Id</th>
            <th>Payment Date</th>
            <th></th>
        </tr>

        @{
            foreach (var element in Model)
            {
                <tr>
                    <td> @(element.FinalPrice)</td>
                    <td> @(element.ProductNames)</td>
                    <td> @(element.CouponIds)</td>
                    <td> @(element.PaymentDate)</td>
                    <td> @(Html.ActionLink("Delete", "Delete", "Transaction", new { id = element.Id }, new { @class = "btn btn-secondary" }))</td>
                </tr>
            }


        }



    </table>
