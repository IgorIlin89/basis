@using OnlineShopWeb.TransferObjects.Models;
@using OnlineShopWeb.Domain;
@model ProductModel
@{
    ViewData["Title"] = "Igors Home Page";
}

<p>@(Html.ActionLink("Back", "Index", "Product", null, new { @class = "btn btn-secondary" }))</p>

<br />
<br />

<form asp-action="Update" asp-controller="Product" method="post">


    <input type="hidden" asp-for="ProductId" />


    <label for="Name">Name:</label>
    <input type="text" asp-for="Name" />
    <span asp-validation-for="Name" class="text-danger"></span>

    <br />

    <label for="Producer">Producer:</label>
    <input type="text" asp-for="Producer" />
    <span asp-validation-for="Producer" class="text-danger"></span>

    <br />

    <label>Category :</label>
    @Html.DropDownList("Category",
            Html.GetEnumSelectList<ProductCategory>(), "-- Select One --", new { @required = "required" })

    <br />

    <label for="Price">Price:</label>
    <input type="text" asp-for="Price" />
    <span asp-validation-for="Price" class="text-danger"></span>

    <br />

    <label for="Picture">Picture:</label>
    <input type="text" asp-for="Picture" />
    <span asp-validation-for="Picture" class="text-danger"></span>

    <br />
    <br />

    <input type="submit" value="Update" />

</form>
